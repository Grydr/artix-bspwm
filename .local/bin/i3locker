#!/bin/sh

wallLock=/tmp/wall-lock.png
wallBlur=/tmp/wall-blur.png
if [[ -f $wallLock ]]; then
	rm -f $wallLock
	scrot $wallLock
else
	scrot $wallLock
fi

magick $wallLock -blur 0x6 $wallBlur
i3lock \
	--image=$wallBlur \
	--clock \
	--time-color=#ffffff \
	--greeter-color=#ffffff \
	--date-color=#ffffff
#--greeter-text="Hello, gryd" \
#--greeter-align=2
